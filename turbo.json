{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"]
    },
    "universal-wallet-connector#build": {
      "dependsOn": ["universal-wallet-sdk#build"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    }
  },
  "globalEnv": [
    "DATABASE_URL"
  ]
}
