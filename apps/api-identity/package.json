    "universal-data": "workspace:*",
    "viem": "^2.21.41",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/pg": "^8.11.10",
    "drizzle-kit": "^0.26.2",
    "tsx": "^4.19.2",
