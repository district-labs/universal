{
	"name": "api-universal",
	"author": "District Labs, Inc <districtlabs.com>",
	"version": "0.0.0",
	"license": "MIT",
	"type": "module",
	"exports": {
		".": {
			"default": "./src/index.ts"
		},
		"./package.json": "./package.json"
	},
	"scripts": {
		"dev": "tsx watch src/node.ts",
		"start": "tsx src/node.ts",
		"check-types": "tsc",
		"format": "biome format --write",
		"check": "biome check --write",
		"db:generate": "tsc -p tsconfig.json && drizzle-kit generate",
		"db:migrate": "tsc -p tsconfig.json && drizzle-kit migrate"
	},
	"dependencies": {
		"@hono/node-server": "^1.13.4",
		"@hono/zod-validator": "^0.4.1",
		"@t3-oss/env-core": "^0.11.1",
		"api-credentials": "workspace:*",
		"api-delegations": "workspace:*",
		"api-identity": "workspace:*",
		"drizzle-orm": "^0.35.2",
		"hono": "^4.6.8",
		"pg": "^8.13.1",
		"postgres": "^3.4.5",
		"universal-data": "workspace:*",
		"universal-delegations-sdk": "workspace:*",
		"universal-identity-sdk": "workspace:*",
		"viem": "^2.21.41",
		"zod": "^3.23.8"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.8.0",
		"@types/node": "^20.11.17",
		"@types/pg": "^8.11.10",
		"drizzle-kit": "^0.26.2",
		"tsx": "^4.19.2",
		"typescript": "^5.6.3"
	}
}
