{
  "name": "api-delegations",
  "author": "District Labs, Inc <districtlabs.com>",
  "version": "0.0.0",
  "license": "MIT",
  "files": [
    "dist/**",
    "!dist/**/*.tsbuildinfo",
    "src/**/*.ts",
    "!src/**/*.test.ts",
    "!src/**/*.test-d.ts"
  ],
  "sideEffects": true,
  "type": "module",
  "main": "./dist/esm/index.js",
  "types": "./dist/types/index.d.ts",
  "typings": "./dist/types/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "default": "./dist/esm/index.js"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "dev": "tsx watch -r dotenv/config src/node.ts",
    "build": "pnpm run clean && pnpm run build:esm+types",
    "build:esm+types": "tsc --project tsconfig.build.json --outDir ./dist/esm --declaration --declarationMap --declarationDir ./dist/types",
    "clean": "rm -rf dist tsconfig.tsbuildinfo",
    "start": "tsx src/node.ts",
    "start:dist": "node -r ts-node/register/transpile-only -r tsconfig-paths/register ./dist/esm/node.js",
    "check-types": "tsc --noemit",
    "lint": "eslint ./src --max-warnings 0 && pnpm check-types",
    "lint:fix": "eslint ./src --fix",
    "prettier": "prettier --write ./src"
  },
  "dependencies": {
    "@hono/node-server": "^1.13.4",
    "@hono/zod-validator": "^0.4.1",
    "drizzle-orm": "^0.35.2",
    "hono": "^4.6.8",
    "pg": "^8.13.1",
    "postgres": "^3.4.5",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "viem": "^2.21.41",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^20.11.17",
    "@types/pg": "^8.11.10",
    "drizzle-kit": "^0.26.2",
    "dotenv": "^16.4.5",
    "eslint": "^9.13.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-unused-imports": "^4.1.4",
    "prettier": "^3.3.3",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.12.2"
  }
}
