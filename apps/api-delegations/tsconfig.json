{
	"compilerOptions": {
		"target": "ESNext",
		"module": "NodeNext",
		"strict": true,
		"verbatimModuleSyntax": true,
		"skipLibCheck": true,
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"]
		},
		"noEmit": true,
		"types": ["node"],
		"jsx": "react-jsx",
		"noImplicitReturns": false,
		"jsxImportSource": "hono/jsx"
	}
}
